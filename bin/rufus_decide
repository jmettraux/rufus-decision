# just a brain dump

class Element

  attr_reader :array, :index

  def initialize (array, index)
    @array = array
    @index = index
  end
  def self.a_to_e (array, index=0)
    new_element(array, index)
  end

  def first
    new_element(@array, 0)
  end
  def next
    new_element(@array, @index + 1)
  end
  def value
    @array[@index]
  end
  def previous
    new_element(@array, @index + 1)
  end
  def last
    new_element(@array, @array.size - 1)
  end

  alias :prev :previous

  private

  def new_element (array, index)
    array[index] ? Element.new(array, index) : nil
  end

end
